{
  "name": "Timer",
  "version": "1.0.0",
  "description": "Frank Ocean alarms",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "timer",
    "electron",
    "macos"
  ],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yourname.timer",
    "productName": "Timer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dir",
      "icon": "icons/app.icns"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "extraResources": []
  }
}
